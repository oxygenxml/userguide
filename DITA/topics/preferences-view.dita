<topic id="preferences-view">
  <title><ph product="authorEclipse developerEclipse editorEclipse">View</ph><ph
      product="author developer editor">Views</ph> Preferences</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm product="author developer editor"
          >Preferences<indexterm>Views</indexterm></indexterm>
        <indexterm product="authorEclipse developerEclipse editorEclipse"
            >Preferences<indexterm>View</indexterm></indexterm>
        <indexterm product="authorEclipse developerEclipse editorEclipse">Console view
          preferences</indexterm>
        <indexterm product="author developer editor">Project view preferences</indexterm>
        <indexterm product="authorEclipse developerEclipse editorEclipse">Navigator view
          preferences</indexterm>
        <indexterm product="developer editor">Tree editor preferences</indexterm>
        <indexterm product="author developer editor">Information view preferences</indexterm>
        <indexterm product="author editor authorEclipse editorEclipse">Elements view
