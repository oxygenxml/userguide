<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE troubleshooting PUBLIC "-//OASIS//DTD DITA Troubleshooting//EN" "troubleshooting.dtd">
<troubleshooting id="display-problems-linux">
  <title>Display Problems on Linux or Solaris</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm>Display problem on Linux/Solaris</indexterm>
      </keywords>
    </metadata>
  </prolog>
  <troublebody><condition id="problem">
      <title>Problem</title>
      <p>I experience display problems (such as screen freezes) on Linux or Solaris.</p>
    </condition><troubleSolution>
      <cause id="cause">
        <title>Cause</title>
        <p>This is possibly a rendering problem with the off-screen pixmap support.</p>
      </cause><remedy id="solution">
      <title>Solution</title>
      <steps-unordered>
          <step>
            <cmd><xref href="set-parameter-in-startup-script.dita">Add the following startup
                parameter</xref>: <b>-Dsun.java2d.pmoffscreen=false</b>.</cmd>
          </step>
        </steps-unordered>
    </remedy></troubleSolution></troublebody>
</troubleshooting>
