<topic id="xml-schema-diagram-attributeGroup-properties">
  <title>xs:attributeGroup</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm>Design editing
            mode<indexterm>Components<indexterm>xs:attributeGroup</indexterm></indexterm></indexterm>
        <indexterm>XML Schemas<indexterm>Design mode
