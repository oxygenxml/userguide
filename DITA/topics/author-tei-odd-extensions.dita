<topic id="author-tei-odd-extensions">
  <title>TEI ODD Author Mode Actions</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm>TEI ODD document type<indexterm>Author mode actions</indexterm></indexterm>
