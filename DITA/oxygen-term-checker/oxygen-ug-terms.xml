<incorrect-terms>
    <!-- Use "content authors" instead of "technical writers" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">technical writer</match>
        <suggestion format="text">content author</suggestion>
        <message>Use "content author" instead of "technical writer" as per style guide.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">technical writers</match>
        <suggestion format="text">content authors</suggestion>
        <message>Use "content authors" instead of "technical writers" as per style guide.</message>
    </incorrect-term>

    <!-- Use "combo box" instead of "combobox" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">combobox</match>
        <suggestion format="text">combo box</suggestion>
        <message>Use "combo box" instead of "combobox".</message>
    </incorrect-term>

    <!-- Use "cursor" instead of "caret" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">caret</match>
        <suggestion format="text">cursor</suggestion>
        <message>Use "cursor" instead of "caret".</message>
    </incorrect-term>

    <!-- Use "dialog box" instead of "dialog" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">dialog</match>
        <suggestion format="text">dialog box</suggestion>
        <message>Use "dialog box" instead of "dialog" when referring to UI elements.</message>
    </incorrect-term>

    <!-- Use "drop-down menu" or "drop-down list" instead of "combo box" for composite buttons -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">combo box</match>
        <suggestion format="text">drop-down menu</suggestion>
        <message>Use "drop-down menu" or "drop-down list" for composite buttons with submenus.</message>
    </incorrect-term>

    <!-- Use "enable" for features, "select" for UI options -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">enabled</match>
        <suggestion format="text">selected</suggestion>
        <message>Use "selected" for UI options, "enabled" for features.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">disabled</match>
        <suggestion format="text">deselected</suggestion>
        <message>Use "deselected" for UI options, "disabled" for features.</message>
    </incorrect-term>

    <!-- Use "etc." only inside parentheses -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">etc\.</match>
        <suggestion format="text">(etc.)</suggestion>
        <message>Use "etc." only inside parentheses.</message>
    </incorrect-term>

    <!-- Use "following" or "subsequent" instead of "next" for present tense introductions -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">next</match>
        <suggestion format="text">following</suggestion>
        <message>Use "following" or "subsequent" instead of "next" when introducing something that follows.</message>
    </incorrect-term>

    <!-- Use "For example" or "In other words" instead of "e.g." or "i.e." -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">e\.g\.</match>
        <suggestion format="text">For example</suggestion>
        <message>Do not use "e.g."—use "For example" instead.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">i\.e\.</match>
        <suggestion format="text">In other words</suggestion>
        <message>Do not use "i.e."—use "In other words" instead.</message>
    </incorrect-term>

    <!-- Use "includes" instead of "comes with" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">comes with</match>
        <suggestion format="text">includes</suggestion>
        <message>Use "includes" instead of "comes with".</message>
    </incorrect-term>

    <!-- Use "multiple" instead of "more than one" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">more than one</match>
        <suggestion format="text">multiple</suggestion>
        <message>Use "multiple" instead of "more than one".</message>
    </incorrect-term>

    <!-- Use "Schemas" instead of "Schemata" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">schemata</match>
        <suggestion format="text">schemas</suggestion>
        <message>Use "schemas" as the plural form, not "schemata".</message>
    </incorrect-term>

    <!-- Use "they" instead of "he/she" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">he/she</match>
        <suggestion format="text">they</suggestion>
        <message>Use "they" instead of "he/she".</message>
    </incorrect-term>

    <!-- Use "you" instead of "one" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">one</match>
        <suggestion format="text">you</suggestion>
        <message>Use "you" instead of the impersonal "one".</message>
    </incorrect-term>

    <!-- Use "Content Completion Assistant" for the feature name -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">content completion assistant</match>
        <suggestion format="text">Content Completion Assistant</suggestion>
        <message>Use "Content Completion Assistant" (capitalized) for the feature name.</message>
    </incorrect-term>

    <!-- Use "editing mode" or "mode" instead of "editor" for specific modes -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">editor</match>
        <suggestion format="text">editing mode</suggestion>
        <message>Use "editing mode" or "mode" instead of "editor" when referring to a specific mode.</message>
    </incorrect-term>

    <!-- Use American English spelling -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">colour</match>
        <suggestion format="text">color</suggestion>
        <message>Use American English spelling: "color" instead of "colour".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">favour</match>
        <suggestion format="text">favor</suggestion>
        <message>Use American English spelling: "favor" instead of "favour".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">organise</match>
        <suggestion format="text">organize</suggestion>
        <message>Use American English spelling: "organize" instead of "organise".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">analyse</match>
        <suggestion format="text">analyze</suggestion>
        <message>Use American English spelling: "analyze" instead of "analyse".</message>
    </incorrect-term>
    <!-- Add more British/American spelling pairs as needed -->

    <!-- Use "Schemas" instead of "Schemata" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">schemata</match>
        <suggestion format="text">schemas</suggestion>
        <message>Use "schemas" as the plural form, not "schemata".</message>
    </incorrect-term>

    <!-- Use "Syncro Soft" not "Syncro" unless defined -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">Syncro</match>
        <suggestion format="text">Syncro Soft</suggestion>
        <message>Use "Syncro Soft" unless "Syncro" is clearly defined as "Syncro Soft" in the document.</message>
    </incorrect-term>

    <!-- Use "ET" for Eastern Time, not "EDT" or "EST" -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">EDT</match>
        <suggestion format="text">ET</suggestion>
        <message>Use "ET" for Eastern Time, not "EDT".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">EST</match>
        <suggestion format="text">ET</suggestion>
        <message>Use "ET" for Eastern Time, not "EST".</message>
    </incorrect-term>

    <!-- Use "plugin", "screenshot", "checkbox" (do not hyphenate) -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">plug-in</match>
        <suggestion format="text">plugin</suggestion>
        <message>Do not hyphenate "plugin".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">screen-shot</match>
        <suggestion format="text">screenshot</suggestion>
        <message>Do not hyphenate "screenshot".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">check-box</match>
        <suggestion format="text">checkbox</suggestion>
        <message>Do not hyphenate "checkbox".</message>
    </incorrect-term>

    <!-- Use "schemas" not "schemata" (duplicate for completeness) -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">schemata</match>
        <suggestion format="text">schemas</suggestion>
        <message>Use "schemas" as the plural form, not "schemata".</message>
    </incorrect-term>

    <!-- Use "Content Completion Assistant" (capitalized) -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">content completion assistant</match>
        <suggestion format="text">Content Completion Assistant</suggestion>
        <message>Use "Content Completion Assistant" (capitalized) for the feature name.</message>
    </incorrect-term>

    <!-- Use "drop-down menu" or "drop-down list" (hyphenated) -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">dropdown menu</match>
        <suggestion format="text">drop-down menu</suggestion>
        <message>Use "drop-down menu" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">dropdown list</match>
        <suggestion format="text">drop-down list</suggestion>
        <message>Use "drop-down list" (hyphenated).</message>
    </incorrect-term>

    <!-- Use "right-click", "double-click", "built-in", "pop-up", "drop-down", "on-site" (hyphenated) -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">right click</match>
        <suggestion format="text">right-click</suggestion>
        <message>Use "right-click" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">double click</match>
        <suggestion format="text">double-click</suggestion>
        <message>Use "double-click" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">built in</match>
        <suggestion format="text">built-in</suggestion>
        <message>Use "built-in" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">pop up</match>
        <suggestion format="text">pop-up</suggestion>
        <message>Use "pop-up" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">drop down</match>
        <suggestion format="text">drop-down</suggestion>
        <message>Use "drop-down" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">on site</match>
        <suggestion format="text">on-site</suggestion>
        <message>Use "on-site" (hyphenated).</message>
    </incorrect-term>

    <!-- Use "co-exist", "co-owner", "re-enable", "re-executing", "re-engineering", "re-evaluate", "non-" (hyphenated) -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">coexist</match>
        <suggestion format="text">co-exist</suggestion>
        <message>Use "co-exist" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">coowner</match>
        <suggestion format="text">co-owner</suggestion>
        <message>Use "co-owner" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">reenable</match>
        <suggestion format="text">re-enable</suggestion>
        <message>Use "re-enable" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">reexecuting</match>
        <suggestion format="text">re-executing</suggestion>
        <message>Use "re-executing" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">reengineering</match>
        <suggestion format="text">re-engineering</suggestion>
        <message>Use "re-engineering" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="whole-word">reevaluate</match>
        <suggestion format="text">re-evaluate</suggestion>
        <message>Use "re-evaluate" (hyphenated).</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="warning">
        <match type="regular-expression">non([a-zA-Z])</match>
        <suggestion format="text">non-$1</suggestion>
        <message>Use "non-" (hyphenated) for all words with the "non-" prefix.</message>
    </incorrect-term>

    <!-- Use "plural acronyms" without apostrophe -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="regular-expression">([A-Z]{2,})'s</match>
        <suggestion format="text">$1s</suggestion>
        <message>Do not use apostrophe for plural acronyms. Use a lowercase "s" after the acronym.</message>
    </incorrect-term>

    <!-- Use "affect" (verb) and "effect" (noun) correctly -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">affect</match>
        <suggestion format="text">effect</suggestion>
        <message>Check if "affect" is used as a noun. Use "effect" for the noun form.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">effect</match>
        <suggestion format="text">affect</suggestion>
        <message>Check if "effect" is used as a verb. Use "affect" for the verb form.</message>
    </incorrect-term>

    <!-- Use "between" for distinct items, "among" for groups -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">between</match>
        <suggestion format="text">among</suggestion>
        <message>Check if "between" is used for groups. Use "among" for groups, "between" for distinct items.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">among</match>
        <suggestion format="text">between</suggestion>
        <message>Check if "among" is used for distinct items. Use "between" for distinct items, "among" for groups.</message>
    </incorrect-term>

    <!-- Use "various" or "multiple" instead of "different" when not making a comparison -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">different</match>
        <suggestion format="text">various</suggestion>
        <message>Use "various" or "multiple" instead of "different" unless making a comparison.</message>
    </incorrect-term>

    <!-- Use "less" for uncountable, "fewer" for countable -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">less</match>
        <suggestion format="text">fewer</suggestion>
        <message>Use "fewer" for countable items, "less" for uncountable.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">fewer</match>
        <suggestion format="text">less</suggestion>
        <message>Use "less" for uncountable items, "fewer" for countable.</message>
    </incorrect-term>

    <!-- Use "such as" for inclusion, "like" for comparison -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">like</match>
        <suggestion format="text">such as</suggestion>
        <message>Use "such as" for inclusion, "like" for comparison.</message>
    </incorrect-term>

    <!-- Use "that" for restrictive, "which" for non-restrictive clauses -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">which</match>
        <suggestion format="text">that</suggestion>
        <message>Check if "which" is used for a restrictive clause. Use "that" for restrictive, "which" for non-restrictive clauses.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">that</match>
        <suggestion format="text">which</suggestion>
        <message>Check if "that" is used for a non-restrictive clause. Use "which" for non-restrictive, "that" for restrictive clauses.</message>
    </incorrect-term>

    <!-- Use "who" for people, "that" for objects -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">that</match>
        <suggestion format="text">who</suggestion>
        <message>Use "who" when referring to people, "that" for objects.</message>
    </incorrect-term>

    <!-- Use "to either" instead of "either to" -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">either to</match>
        <suggestion format="text">to either</suggestion>
        <message>Use "to either" instead of "either to" for better grammatical correctness.</message>
    </incorrect-term>

    <!-- Use "whether or not" when differentiating between doing or not doing something -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">whether</match>
        <suggestion format="text">whether or not</suggestion>
        <message>Use "whether or not" when differentiating between doing or not doing something.</message>
    </incorrect-term>

    <!-- Use "a" before consonant sound, "an" before vowel sound -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="regular-expression">\ba an? [aeiouAEIOU]</match>
        <suggestion format="text">an</suggestion>
        <message>Use "an" before words that start with a vowel sound, "a" before consonant sound.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="regular-expression">\ban an? [^aeiouAEIOU]</match>
        <suggestion format="text">a</suggestion>
        <message>Use "a" before words that start with a consonant sound, "an" before vowel sound.</message>
    </incorrect-term>

    <!-- Use "will be" only for future events, prefer present tense when possible -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">will be</match>
        <suggestion format="text">is</suggestion>
        <message>Use present tense ("is") instead of future tense ("will be") when possible for clarity.</message>
    </incorrect-term>

    <!-- Avoid progressive tense unless necessary -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="regular-expression">\bis [a-z]+ing\b</match>
        <suggestion format="text">[present tense verb]</suggestion>
        <message>Avoid progressive tense unless referring to an ongoing event.</message>
    </incorrect-term>

    <!-- Avoid contractions -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="regular-expression">\b(can't|won't|don't|doesn't|isn't|aren't|wasn't|weren't|hasn't|haven't|hadn't|shouldn't|wouldn't|couldn't|mustn't|mightn't|shan't|let's|it's|that's|there's|what's|who's|where's|when's|why's|how's|I'm|you're|he's|she's|we're|they're|I've|you've|we've|they've|I'd|you'd|he'd|she'd|we'd|they'd|I'll|you'll|he'll|she'll|we'll|they'll)\b</match>
        <suggestion format="text">[do not use contractions]</suggestion>
        <message>Do not use contractions in technical documentation.</message>
    </incorrect-term>

    <!-- Avoid redundant phrases -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">add an additional</match>
        <suggestion format="text">add</suggestion>
        <message>"additional" is redundant in "add an additional".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">during the course of</match>
        <suggestion format="text">during</suggestion>
        <message>"course of" is redundant in "during the course of".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">end result</match>
        <suggestion format="text">result</suggestion>
        <message>"end" is redundant in "end result".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">final outcome</match>
        <suggestion format="text">outcome</suggestion>
        <message>"final" is redundant in "final outcome".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">in order to</match>
        <suggestion format="text">to</suggestion>
        <message>"in order" is redundant in "in order to".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">merge together</match>
        <suggestion format="text">merge</suggestion>
        <message>"together" is redundant in "merge together".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">since the time you last</match>
        <suggestion format="text">since you last</suggestion>
        <message>"the time" is redundant in "since the time you last".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">still remains</match>
        <suggestion format="text">remains</suggestion>
        <message>"still" is redundant in "still remains".</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">unintentional mistake</match>
        <suggestion format="text">mistake</suggestion>
        <message>All mistakes are unintentional; "unintentional" is redundant.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">variety of different</match>
        <suggestion format="text">variety of</suggestion>
        <message>"different" is redundant in "variety of different".</message>
    </incorrect-term>

    <!-- Avoid unnecessary adverbs -->
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">very</match>
        <suggestion format="text"></suggestion>
        <message>Avoid unnecessary adverbs such as "very" unless for emphasis.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">extremely</match>
        <suggestion format="text"></suggestion>
        <message>Avoid unnecessary adverbs such as "extremely" unless for emphasis.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">pretty</match>
        <suggestion format="text"></suggestion>
        <message>Avoid unnecessary adverbs such as "pretty" unless for emphasis.</message>
    </incorrect-term>
    <incorrect-term ignorecase="true" severity="info">
        <match type="whole-word">little</match>
        <suggestion format="text"></suggestion>
        <message>Avoid unnecessary adverbs such as "little" unless for emphasis.</message>
    </incorrect-term>

    <!-- Avoid exclamation marks -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="character">!</match>
        <suggestion format="text"></suggestion>
        <message>Avoid exclamation marks in the User Guide except in very rare instances.</message>
    </incorrect-term>

    <!-- Avoid semi-colons except in codeblocks -->
    <incorrect-term ignorecase="true" severity="warning">
        <match type="character">;</match>
        <suggestion format="text"></suggestion>
        <message>Do not use semi-colons except in codeblocks.</message>
        <xpath-context exclude="codeblock"/>
    </incorrect-term>
</incorrect-terms>
